datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String   
  createdAt DateTime  @default(now())
  role String @default("user")
  projects  Project[]

}

model Project {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}


model TrainStatus {
  id        Int      @id @default(autoincrement())
  trainNo   Int
  status    String
  timestamp DateTime @default(now())

  @@index([trainNo])
  @@index([status])
  @@index([timestamp])
}
